<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".nesperos">
    z    <TextView
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="50dp"
    android:text="Dashboard"
    android:textColor="@color/white"
    android:textSize="40dp" />


    <ImageView
        android:id="@+id/covi"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="60dp"
        app:srcCompat="@drawable/nesperos"
        />


    <TextView
        android:id="@+id/displayidno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/covi"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:text="ID Number:"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/idno"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/covi"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:text="20194662"
        android:textColor="@color/white"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idno"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:text="Name:"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/displayname"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idno"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:text="Jan Covi Nesperos "
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@+id/name"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="58dp"
        android:layout_marginRight="50dp"
        android:text="LOG OUT"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:backgroundTint="#ef5350" />


</RelativeLayout>